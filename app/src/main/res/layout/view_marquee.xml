<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:fresco="http://schemas.android.com/apk/res-auto">
    <ImageView

        android:id="@+id/ivMarquee"
        android:layout_width="70px"
        android:layout_height="70px"
        android:layout_marginLeft="2px"
        android:layout_centerVertical="true"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/tvMarquee"
        android:layout_width="440px"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_centerVertical="true"
        android:text="1111"
        android:layout_toRightOf="@+id/ivMarquee"
        android:gravity="center_vertical"
        android:textColor="@android:color/holo_red_light"
        android:textSize="15sp"  />
    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_width="50px"
        android:layout_marginLeft="5dp"
        android:layout_margin="5dp"
        android:layout_height="50px"
        fresco:roundAsCircle="true"
        fresco:roundingBorderColor="@color/colorAccent"
        fresco:roundingBorderWidth="1dp"
        android:layout_toRightOf="@+id/tvMarquee"
        android:id="@+id/ivMarquee1"
        android:layout_centerVertical="true"
        android:src="@mipmap/ic_launcher"/>
    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_centerVertical="true"
        android:layout_width="50px"
        android:layout_marginLeft="5dp"
        android:layout_margin="5dp"
        android:layout_height="50px"
        fresco:roundAsCircle="true"
        fresco:roundingBorderColor="@color/colorAccent"
        fresco:roundingBorderWidth="1dp"
        android:layout_toRightOf="@+id/ivMarquee1"
        android:id="@+id/ivMarquee2"
        android:src="@mipmap/ic_launcher"/>

    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_centerVertical="true"
        android:id="@+id/ivMarquee3"
        android:layout_width="50px"
        android:layout_height="50px"
        android:layout_alignTop="@+id/ivMarquee2"
        android:layout_toEndOf="@+id/ivMarquee2"
        android:layout_toRightOf="@+id/ivMarquee2"
        android:src="@mipmap/ic_launcher"
        fresco:roundAsCircle="true"
        fresco:roundingBorderColor="@color/colorAccent"
        fresco:roundingBorderWidth="1dp" />
        />
    <ImageView
        android:layout_toRightOf="@+id/ivMarquee3"
        android:layout_width="15px"
        android:layout_marginLeft="15dp"
        android:layout_height="60px"
        android:layout_centerVertical="true"
        android:src="@mipmap/right_icon"/>
</RelativeLayout>